{
  "compilerOptions": {
    "skipLibCheck": true,
    "declaration": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["es2016", "es6"],
    "moduleResolution": "node",
    "strict": true,
    "removeComments": true,
    "target": "esnext",
    "sourceMap": false,
    "outDir": "dist",
    "rootDir": "src",
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "exclude": ["node_modules", "dist"]
}